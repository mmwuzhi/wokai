{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-jsx",
    "module": "esnext",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitOnError": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./server/**/*"
  ],
  "exclude": [
    "node_modules",
    "src",
    "dist"
  ]
}
