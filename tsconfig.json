{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitOnError": true,
    "allowJs": true
  },
  "include": ["./server/**/*"],
  "exclude": ["node_modules", "src", "dist"]
}
